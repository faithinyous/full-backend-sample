{
  "name": "test-backend-docker",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "dev": "yarn del-cli logs  && nodemon src/server.ts",
    "start": "NODE_ENV=production node -r ./tsconfig-paths-bootstrap.js dist/server.js",
    "build": "npx tsc && yarn postbuild",
    "postbuild": "npm run copy-files",
    "copy-files": "npx copyfiles -u 1 src/**/*.js dist",
    "typeorm": "typeorm-ts-node-commonjs -d src/data-source.ts",
    "schema:drop": "yarn typeorm schema:drop",
    "schema:sync": "yarn typeorm schema:sync",
    "migrate": "yarn typeorm migration:run",
    "revert": "yarn typeorm migration:revert",
    "generate": "yarn typeorm migration:generate src/migrations/data",
    "reset": "yarn schema:drop && yarn schema:sync",
    "ts-node": "ts-node -r tsconfig-paths/register",
    "deploy": "yarn reset && yarn dev",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.8",
    "dotenv": "^16.1.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.9",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.16",
    "typeorm-extension": "^2.8.1",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.0",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.42.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mrm": "^4.1.14",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/faithinyous/test-backend-docker.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://https://github.com/faithinyous/test-backend-docker/issues"
  },
  "homepage": "https://github.com/faithinyous/test-backend-docker#readme",
  "lint-staged": {
    "{**/*,*}.{js,ts,jsx,tsx,css,md}": "prettier --write",
    ".js,.ts .": "eslint --fix --ext",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
